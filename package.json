{
  "name": "kdl",
  "version": "0.1.0",
  "description": "KDL Web Project",
  "scripts": {
    "compose": "trap 'echo Stopped; exit 0' SIGINT; docker-compose",
    "backend:up": "npm run compose up -- --build",
    "backend:down": "npm run compose down",
    "backend:exec": "npm run compose exec backend",
    "backend:pkg": "npm run backend:exec npm",
    "backend:snapshot": "npm run backend:pkg run snapshot:create",
    "backend:snapshot:apply": "npm run backend:pkg run snapshot:apply ./snapshots/${npm_config_snapshot}.yaml"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kingsdigitallab/kdl.git"
  },
  "author": "King's Digital Lab",
  "license": "MPL-2.0",
  "bugs": {
    "url": "https://github.com/kingsdigitallab/kdl/issues"
  },
  "homepage": "https://github.com/kingsdigitallab/kdl#readme"
}
