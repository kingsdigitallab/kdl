---
layout: layouts/base.njk
permalink: "projects/{% if pagination.pageNumber > 0 %}{{ pagination.pageNumber + 1 }}/{% endif %}/"
---

{% from "kdl/components/article/macros.njk" import articleMacro %}
{%- for item in paginatedProjects -%}
    {% set project = item.data.project %}
    {% set headerHtml %}
    <section class="info">
        {%- include "partials/project.njk" -%}
    </section>
    {% endset %}
    {% set footerHtml %}
    <section class="status {{ project.creativeWorkStatus.name }}">
        {{ project.creativeWorkStatus.name }}, {{ project.cmsStatus }}
    </section>
    {% endset %}
    {{ articleMacro(item.data, { addLink: true, headerHtml: headerHtml, footerHtml: footerHtml }) }}
{%- endfor -%}
{% set label = "Projects" %}
{% include "partials/pagination.njk" %}