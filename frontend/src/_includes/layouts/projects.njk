---
layout: layouts/base.njk
permalink: "projects/{% if pagination.pageNumber > 0 %}{{ pagination.pageNumber + 1 }}/{% endif %}/"
---

<input type="radio" name="view-filter" id="grid" class="radio" checked>
<label for="grid">⊞ Grid</label> |
<input type="radio" name="view-filter" id="list" class="list-view radio">
<label for="list">≣ List</label>

<ol start="{{ pagination.pageNumber * 25 + 1}}">
  {%- for project in paginatedProjects -%}
  <li>
        <div class="index-information">
          <a href="{% route project.slug, 'Projects' %}"><h2><span>ACROYMN</span>{{ project.name }}</h2></a>
      {% include "partials/project.njk" %}
    </div>
      <figure>
        <img src="https://picsum.photos/400/600" alt="random auto-generated placeholder image">
        <figcaption>
          image caption
        </figcaption>
      </figure>
    

  </li>
  {%- endfor -%}
</ol>

{% set label = "Projects" %}
