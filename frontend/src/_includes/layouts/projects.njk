---
layout: layouts/base.njk
permalink: "projects/{% if pagination.pageNumber > 0 %}{{ pagination.pageNumber + 1 }}/{% endif %}/"
---

{% from "kdl/components/article/macros.njk" import articleMacro %}

{%- for item in paginatedProjects -%}
  {% set project = item.data.project %}
  <a href="{{ item.data.page.url }}">
    <h2>
      {{ project.name }}<small>{{ project.slug }}</small>
    </h2>
    <span>
      {%- for department in project.department %}{{ department.organisation_id.agent.name }},{% endfor %}
      {% if project.foundingDate %}
        {{ project.foundingDate | asProjectDate }}&#8211;{{ project.dissolutionDate | asProjectDate }}
      {% endif %}
    </span>
  </a>
{%- endfor -%}

{% set label = "Projects" %}
{% include "partials/pagination.njk" %}
