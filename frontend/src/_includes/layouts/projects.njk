---
layout: layouts/base.njk
permalink: "projects/{% if pagination.pageNumber > 0 %}{{ pagination.pageNumber + 1 }}/{% endif %}/"
---

{% from "kdl/components/article/macros.njk" import articleMacro %}
{%- for item in paginatedProjects -%}
    {% set project = item.data.project %}
    {% set headerHtml %}
    <section class="index-information">
        {%- include "partials/project.njk" -%}
    </section>
    {% endset %}
    {% set html %}
    <section class="status">{{ project.creativeWorkStatus.name }}, {{ project.cmsStatus }}</section>
    {% endset %}
    {{ articleMacro(item.data, { addLink: true, headerHtml: headerHtml, html: html }) }}
{%- endfor -%}
{% set label = "Projects" %}
{% include "partials/pagination.njk" %}