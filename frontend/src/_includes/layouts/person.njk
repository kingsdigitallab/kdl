---
layout: layouts/agent.njk
---

{% set agent = agentInstance.agent %}

{% if agent.memberOf %}
<div id="part-of">
  <h2>Part of</h2>
  <ul>
    {% for member in agent.memberOf|sort(false, false, "name") %}
    <li>
      {% if member.inProject %}
      <a href="{{ 'Projects' | route(member.inProject.slug) }}/">{{ member.inProject.name }}</a>
      {% else %}
      <a href="{{ 'Organisations' | route(member.inOrganisation.agent.slug) }}/">{{ member.inOrganisation.agent.name
        }}</a>
      {% endif %}
    </li>
    {% endfor %}
  </ul>
</div>
{% endif %}
