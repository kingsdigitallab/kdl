---
layout: layouts/base.njk
permalink: "blog/{% if pagination.pageNumber > 0 %}{{ pagination.pageNumber + 1 }}/{% endif %}/"
---

<ol start="{{ pagination.pageNumber * 25 + 1}}">
  {%- for post in posts -%}
  <li>
      <div class="index-information">
            <a href="{% route post.url %}">
      <h2>{{ post.data.title }}</h2>
    </a>
    </div>
    <figure>
      <img src="https://picsum.photos/400/600" alt="random auto-generated placeholder image">
    </figure>
    <div class="excerpt">
      <em>{{ post.data.excerpt }}</em>
      {% set authors = post.data.authors %}
      {% set date = post.date %}
      {% include "partials/byline.njk" %}
    </div>
  </li>
  {%- endfor -%}
</ol>

{% set label = "Posts" %}
{% include "partials/pagination.njk" %}


