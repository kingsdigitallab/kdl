---
layout: layouts/base.njk
---

<article>
  <header class="post-meta">
    {% include "partials/byline.njk" %}
  </header>
  {% if banner and banner.image %}
  <div id="images">
    <figure>
      <img src="{{ banner.image }}" alt="{{ banner.description }}">
      <figcaption>{{ banner.description }}</figcaption>
    </figure>
  </div>
  {% endif %}

  {{ content | safe }}
</article>
