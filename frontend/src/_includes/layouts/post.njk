---
layout: layouts/base.njk
---

{% from "kdl/components/article/macros.njk" import articleMacro %}

{{ articleMacro(obj, collections, { addLink: false }) }}

{% set previousPost = collections.post | getPreviousCollectionItem %}
{% set nextPost = collections.post | getNextCollectionItem %}

<section class="single-pagination">
  <nav aria-label="pagination">
    <ol>
      {% if previousPost %}
        <li>
          <a href="{{ previousPost.url }}">{{ previousPost.data.title }}</a>
        </li>
      {% endif %}
      {% if nextPost %}
        <li>
          <a href="{{ nextPost.url }}">{{ nextPost.data.title }}</a>
        </li>
      {% endif %}
    </ol>
  </nav>
</section>
