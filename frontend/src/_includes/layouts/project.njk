---
layout: layouts/base.njk
---

{% from "kdl/components/image/macros.njk" import imageMacro %}

<section>
  <!-- Images -->
  {% if obj.feature %}
  {{ imageMacro(obj.feature) }}
  {% endif %}
 
  <!-- Overview -->
  {% if project.description %}
    <div id="overview">
      <p>{{ project.description | renderMd | safe }}</p>
    </div>
  {% endif %}

  <!-- Team -->
  {% if project.member %}
    <div id="team">
      <h2>Team</h2>
      <ul>
        {% for member in project.member|sort(false, false, "agent.name") %}
          <li>
            <a href="{% route member.agent.slug, 'People' %}">{{ member.agent.name }}</a>
            <span>
              {{ member.roleName.name }}
              {%- if member.inOrganisation -%}, {{ member.inOrganisation.agent.name }}{%- endif %}
              </span>
            </li>
          {% endfor %}
        </ul>
      </div>
    {% endif %}
</section>

<section>
  <!-- Information -->
  <div id="metadata">
    <span>Project Status: {{ project.creativeWorkStatus.name }}</span>

    {% if project.url.length > 0 %}
      <div id="links">
      <h3>Project links</h3>
        <ul>
          {% for url in project.url %}
            <li>
              <a href="{{ url.linkrole_id.url }}" role="button">{{ url.linkrole_id.name }}</a>
            </li>
          {% endfor %}
        </ul>
      </div>
    {% endif %}

    {% if project.funder %}
      <div class="funder">
        <dl>
          {% for funder in project.funder %}
            <dt>Funder</dt>
            <dd>
              <a href="{% route funder.agent_id.slug, 'Organisations' %}">{{- funder.agent_id.name -}}</a>
            </dd>
          {% endfor %}
        </dl>
      </div>
    {% endif %}

    {% include "partials/project.njk" %}
  </div>
</section>
