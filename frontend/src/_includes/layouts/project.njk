---
layout: layouts/base.njk
---


<article>
  <article>
    <!-- Images -->
    <div id="images">
      <figure>
        <img src="https://picsum.photos/1500/800" alt="random auto-generated placeholder image">
        <figcaption>
          image caption
        </figcaption>
      </figure>
    </div>


    <!-- Overview -->
    {% if project.description %}
    <div id="overview">
      <p>{{ project.description }}</p>
    </div>
    {% endif %}
  </article>


  <article>
  <!-- Links -->
    {% if project.url %}
    <div id="links">
      <ul>
        {% for url in project.url %}
        <li>
          <a href="{% route url.linkrole_id.url %}" role="button">{{ url.linkrole_id.name }}</a>
        </li>
        {% endfor %}
      </ul>
    </div>
    {% endif %}

    <!-- Metadata -->
    <div id="metadata">
      {% if project.funder %}
      <div class="funder">
        <h3>Funder:</h3>
        <ul>
          {% for funder in project.funder %}
          <li>
            <a href="{% route funder.agent_id.slug, 'Organisations' %}">
              {{- funder.agent_id.name -}}
            </a>
          </li>
          {% endfor %}
        </ul>
      </div>
      {% endif %}

      {% include "partials/project.njk" %}
    </div>
  </article>  
</article>  
  

<article>
  <!-- Team -->
  {% if project.member %}
  <div id="team">
    <h2>Team</h2>
    <ul>
      {% for member in project.member|sort(false, false, "agent.name") %}
      <li>
        <a href="{% route member.agent.slug, 'People' %}">{{ member.agent.name }}</a>
        <span>
        {{ member.roleName.name }}
        {%- if member.inOrganisation -%}, {{ member.inOrganisation.agent.name }}</span>{%- endif %}
      </li>
      {% endfor %}
    </ul>
  </div>
  {% endif %}

</article>
