---
layout: layouts/base.njk
templateClass: tmpl-home
---

<header>
  {% set navKey = "Projects" %}
  {% include "partials/breadcrumbs.njk" %}
  <h1>
    {{- project.name }}
    {%- if project.alternateName %} <span>{{ project.alternateName }}</span>{% endif -%}
  </h1>
</header>
<section>
  {% include "partials/project.njk" %}

  {% if project.description %}
  <p>{{ project.description }}</p>
  {% endif %}

  {% if project.funder %}
  <h2>Funder</h2>
  <ul>
    {% for funder in project.funder %}
    <li>{{ funder.agent_id.name }}</li>
    {% endfor %}
  </ul>
  {% endif %}

  {% if project.member %}
  <h2>Project team</h2>
  <ul>
    {% for member in project.member|sort(false, false, "agent.name") %}
    <li>{{ member.agent.name }}, {{ member.name }}
      {%- if member.inOrganisation -%}, {{ member.inOrganisation.agent.name }}{%- endif %}
    </li>
    {% endfor %}
  </ul>
  {% endif %}

  {% if project.url %}
  <h2>URLs</h2>
  <ul>
    {% for url in project.url %}
    <li>
      <a href="{{ url.linkrole_id.url }}">{{ url.linkrole_id.name }}</a>
    </li>
    {% endfor %}
  </ul>
  {% endif %}
</section>
