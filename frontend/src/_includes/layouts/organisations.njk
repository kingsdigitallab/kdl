---
layout: layouts/base.njk
permalink: "about/partners-and-funders/{% if pagination.pageNumber > 0 %}{{ pagination.pageNumber + 1 }}/{% endif %}/"
---

{{ content | renderMd | safe }}

<div class="wrapper">
  <ul>
    {%- for type, items in collections.organisations | groupby('data.index') -%}
      <li>
        <h2>{{ type }}</h2>
        <ol>
          {%- for item in items -%}
            {% set org = item.data.agentInstance %}
            <li>
              <a href="{% route org.agent.slug, 'Partners and funders' %}">
                {% set agentInstance = org %}
                {% include "partials/organisation.njk" %}
              </a>
            </li>
          {%- endfor -%}
        </ol>
      </li>
    {%- endfor -%}
  </ul>
</div>
