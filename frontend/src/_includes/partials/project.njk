{%- if showTitle %}
  <h {%- if level -%}{{- level -}}{%- else -%}2{%- endif -%}>
  {{- project.name | trim -}}
  {%- if project.alternateName -%}<small>{{ project.alternateName }}</small>{%- endif -%}
  </h {%- if level -%}{{- level -}}{%- else -%}2{%- endif -%}>
{%- endif -%}

{% if project.department.length > 0 %}
  <span>
    {%- for department in project.department %}{{ department.organisation_id.agent.name }}
      {%- if not loop.last -%}
        ,
      {% endif -%}
    {% endfor %}
  </span>
{% endif %}
{% if project.foundingDate %}
  <span>{{ project.foundingDate | asProjectDate }}&#8211;{{ project.dissolutionDate | asProjectDate }}</span>
{% endif %}
